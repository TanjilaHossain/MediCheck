<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.medicheckproject.medicheck.Index"
    android:background="#3c2f2f">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Aid Kit"
        android:id="@+id/bKit"
        android:background="#427a43"
        android:layout_above="@+id/bTraining"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButtonClickHere" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Aid Training"
        android:id="@+id/bTraining"
        android:background="#427a43"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bDisease"
        android:layout_alignEnd="@+id/bDisease"
        android:onClick="onButtonClickHere" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Disease"
        android:id="@+id/bDisease"
        android:background="#427a43"
        android:layout_above="@+id/bDrug"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButtonClickHere" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug in Bangladesh"
        android:id="@+id/bDrug"
        android:background="#427a43"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButtonClickHere" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/search"
        android:layout_above="@+id/bKit" />

</RelativeLayout>
